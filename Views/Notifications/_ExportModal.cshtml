<export-modal inline-template>
    <div class="modal fade export-modal" id="exportModal" tabindex="-1" role="dialog" aria-labelledby="exportModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exportModalLabel">Pranešimų eksportavimas</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col">
                            <div class="filter-group">
                                <p class="question">Kuriuos pranešimus norite eksportuoti?</p>
                                <p class="buttons-group">
                                    <button @@click="toggleExportDataButtons('all')" class="btn" :class="exportAllData">Visus</button>
                                    <button @@click="toggleExportDataButtons('filtered')" class="btn" :class="exportFilteredData">Išfiltruotus</button>
                                </p>
                            </div>
                            <div class="filter-group">
                                <p class="question">Norimas failo formatas?</p>
                                <p class="buttons-group">
                                    <button @@click="toggleFileFormatButtons('pdf')" class="btn" :class="pdfFileFormat">*.pdf</button>
                                    <button @@click="toggleFileFormatButtons('csv')" class="btn" :class="csvFileFormat">*.csv</button>
                                    <button @@click="toggleFileFormatButtons('json')" class="btn" :class="jsonFileFormat">*.json</button>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success">Eksportuoti</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Atšaukti</button>
                </div>
            </div>
        </div>
    </div>
</export-modal>
