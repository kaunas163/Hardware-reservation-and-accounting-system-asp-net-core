@using HardwareReservationAndAccountingSystem.Enums;
@using HardwareReservationAndAccountingSystem.Models;
@model EquipmentBundle

<form asp-controller="EquipmentBundles" asp-action="Update" method="post">
    <div class="modal fade export-modal" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Atnaujinti įrangos komplekto informaciją</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col">
                            <label asp-for="Title">Pavadinimas:</label>
                            <input asp-for="Title" type="text" class="form-control" placeholder="Koks renginio pavadinimas">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col">
                            <label asp-for="Description">Aprašymas:</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Aprašymas"></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col">
                            <label asp-for="Status">Būsena:</label>
                            <select asp-for="Status" asp-items="Html.GetEnumSelectList<EquipmentBundleStatus>()" class="form-control"></select>
                        </div>
                    </div>
                </div>
                @Html.HiddenFor(x => x.Id)
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Atnaujinti</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Atšaukti</button>
                </div>
            </div>
        </div>
    </div>
</form>
